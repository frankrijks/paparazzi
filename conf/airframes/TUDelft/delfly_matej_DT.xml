<!DOCTYPE airframe SYSTEM "../airframe.dtd">

<!-- Delfly (http://www.delfly.nl/home.html)
Lisa/S v1.0 board (http://wiki.paparazziuav.org/wiki/Lisa/S)
DelTang Rx31 receiver (ppm single wire, soldered to servo channel 3 of Lisa/S)

flightplan: fixedwing_basic.xml
radio: DT_Rx31_Devo10.xml
telemetry: default_fixedwing.xml
-->

<airframe name="Delfly Lisa/S 1.0 Indoor">

  <firmware name="fixedwing">
    <target name="ap" board="lisa_s_1.0">

      <!--subsystem name="radio_control" type="superbitrf_rc">
        <define name="RADIO_MODE" value="RADIO_FLAP"/>
        <define name="RADIO_KILL_SWITCH" value="RADIO_GEAR"/>
      </subsystem-->
      
      <subsystem name="radio_control" type="ppm">
	     <configure name="RADIO_CONTROL_PPM_PIN" value="SERVO6"/>
      </subsystem>

      <!-- AHRS_PROPAGATE_FREQUENCY mus be < PERIODIC_FREQUENCY -->
      <configure name="AHRS_PROPAGATE_FREQUENCY" value="512"/>
      <configure name="PERIODIC_FREQUENCY" value="512"/>  <!-- was 512, 120 seams to be the max of the barometer -->
      <define name="USE_PERSISTENT_SETTINGS" value="TRUE"/>
      <configure name="SYS_TIME_LED" value="none"/> <!-- Red LED no longer used a System Alive LED-->
    </target>
    
    
    <target name="sim" board="pc"/>
    <target name="nps" board="pc">
      <subsystem name="fdm" type="jsbsim"/>
      <subsystem name="radio_control" type="ppm"/>
    </target>

    <define name="USE_BAROMETER" value="TRUE"/>

    <!-- Communication -->
    
    <subsystem name="telemetry" type="transparent">
        <configure name="MODEM_BAUD" value="B230400"/>
        <configure name="MODEM_PORT" value="UART1"/>
    </subsystem>
    <!--
    <subsystem name="telemetry" type="superbitrf"/>   
    -->
    

    <!-- Sensors -->
    <subsystem name="imu" type="lisa_s_v1.0"/>
    <subsystem name="ahrs" type="int_cmpl_quat">
      <configure name="USE_MAGNETOMETER" value="1"/>
      <define name="AHRS_USE_GPS_HEADING" value="FALSE"/>
    </subsystem>
    
    <subsystem name="gps" type="ublox">
      <configure name="GPS_PORT" value="UART3"/>
      <configure name="GPS_BAUD" value="B38400"/>
    </subsystem>
    
    <subsystem name="rpm_sensor" type="eagletree">
      <define name="PULSES_PER_ROTATION" value="5"/>
    </subsystem>
    
    <subsystem name="actuators" type="pwm">
      <define name="SERVO_HZ" value="400"/>
      <define name="USE_SERVOS_1AND2"/>
    </subsystem>

    <subsystem name="control"/>
    <subsystem name="navigation"/>
    <subsystem name="ins" type="alt_float"/>

    <define name="USE_LED_1" value="1"/> <!--red LED will be used for logging status -->
        
  </firmware>

  <modules main_freq="512"> <!-- was 512-->
    <load name="gps_ubx_ucenter.xml"/>
    <load name="sd_logger_spi_direct.xml"/>
    <!--load name="sys_mon.xml"/-->
  </modules>


  <servos driver="Pwm">
    <servo name="MOTOR" no="4" min="1100" neutral="1100" max="1900"/>
    <!-- The automated sequence will only work correctly if ELEVATOR settings remain as below!!! -->
    <servo name="ELEVATOR" no="5" min="1100" neutral="1500" max="1900"/>
    <servo name="RUDDER" no="0" min="1900" neutral="1500" max="1100"/>
    <servo name="LED" no="1" min="0" neutral="1250" max="2500"/>
    <servo name="LEDS" no="2" min="0" neutral="1250" max="2500"/>
  </servos>

  <commands>
    <axis name="THROTTLE" failsafe_value="0"/>
    <axis name="ROLL" failsafe_value="0"/>
    <axis name="PITCH" failsafe_value="0"/>
  </commands>

  <rc_commands>
    <set command="THROTTLE" value="@THROTTLE"/>
    <set command="ROLL" value="@ROLL"/>
    <set command="PITCH" value="@PITCH"/>
  </rc_commands>

  <command_laws>
    <!--let var="ledswitch" value="(2*recording_status-1)*MAX_PPRZ"/-->
    <let var="ledscontrol" value="(2*LEDs_switch-1)*MAX_PPRZ"/>
    <set servo="MOTOR" value="(1+throttle_control*sequence_command*0.01*0.2)*@THROTTLE"/>
    <!--set servo="RUDDER" value="LEDs_switch*@ROLL"/-->
    <set servo="RUDDER" value="LEDs_switch*(rudder_direct*@ROLL+rudder_control*sequence_command*0.01*MAX_PPRZ-(1-rudder_direct)*roll_offset*0.01*MAX_PPRZ)"/>
    <set servo="ELEVATOR" value="LEDs_switch*(elevator_direct*@PITCH+elevator_control*sequence_command*0.01*MAX_PPRZ-(1-elevator_direct)*pitch_offset*0.01*MAX_PPRZ)"/>
    <!--set servo="LED" value="$ledswitch"/-->
    <set servo="LEDS" value="$ledscontrol"/>
  </command_laws>

 <section name="AUTOPILOT">
   <define name="MODE_STARTUP" value="AP_MODE_RC_DIRECT"/>
   <define name="MODE_MANUAL" value="AP_MODE_RC_DIRECT"/>
   <define name="MODE_AUTO1" value="AP_MODE_RC_DIRECT"/>
   <define name="MODE_AUTO2" value="AP_MODE_RC_DIRECT"/>
 </section>

 <section name="SIMULATOR" prefix="NPS_">
   <define name="ACTUATOR_NAMES" value="{&quot;front_motor&quot;, &quot;back_motor&quot;, &quot;right_motor&quot;, &quot;left_motor&quot;}"/>
   <define name="JSBSIM_INIT" value="&quot;reset00&quot;"/>
   <define name="JSBSIM_MODEL" value="&quot;simple_quad&quot;"/>
   <define name="SENSORS_PARAMS" value="&quot;nps_sensors_params_default.h&quot;"/>
 </section>

  <section name="IMU" prefix="IMU_">

    <!-- these gyro and accel calib values are the defaults for aspirin2.1/2.2 -->
    <define name="GYRO_X_NEUTRAL" value="0"/>
    <define name="GYRO_Y_NEUTRAL" value="0"/>
    <define name="GYRO_Z_NEUTRAL" value="0"/>

    <define name="GYRO_X_SENS" value="4.359" integer="16"/>
    <define name="GYRO_Y_SENS" value="4.359" integer="16"/>
    <define name="GYRO_Z_SENS" value="4.359" integer="16"/>

    <define name="ACCEL_X_NEUTRAL" value="0"/>
    <define name="ACCEL_Y_NEUTRAL" value="0"/>
    <define name="ACCEL_Z_NEUTRAL" value="0"/>

    <define name="ACCEL_X_SENS" value="4.905" integer="16"/>
    <define name="ACCEL_Y_SENS" value="4.905" integer="16"/>
    <define name="ACCEL_Z_SENS" value="4.905" integer="16"/>

    <define name="MAG_X_NEUTRAL" value="360"/>  <!-- 847 -->
    <define name="MAG_Y_NEUTRAL" value="-602"/> <!-- -415 -->
    <define name="MAG_Z_NEUTRAL" value="-313"/> <!-- -264 -->
    <define name="MAG_X_SENS" value="3.87956285611" integer="16"/> <!-- 2.43585513661 -->
    <define name="MAG_Y_SENS" value="4.00524696232" integer="16"/> <!-- 3.71461295002 -->
    <define name="MAG_Z_SENS" value="4.09474740848" integer="16"/> <!-- 3.4639003008 -->

    <define name="BODY_TO_IMU_PHI" value="0." unit="deg"/> <!-- Roll -104 -->
    <define name="BODY_TO_IMU_THETA" value="-90." unit="deg"/> <!-- pitch : true value : 180; add 15Â° of pitching up : -165 -->
    <define name="BODY_TO_IMU_PSI" value="0." unit="deg"/> <!-- Yaw -->
  </section>



  <section name="AHRS" prefix="AHRS_">
    <!--     Delft magnetic field karlito   -->
    <define name="H_X" value="0.3946524"/> <!-- 0.3770441 -->
    <define name="H_Y" value="-0.0187289"/> <!-- 0.0193986 -->
    <define name="H_Z" value="0.9186396"/> <!-- 0.9259921 -->
  </section>




  <section name="INS" prefix="INS_">
    <define name="ROLL_NEUTRAL_DEFAULT" value="0" unit="deg"/>
    <define name="PITCH_NEUTRAL_DEFAULT" value="0" unit="deg"/>
  </section>



  <section name="VERTICAL CONTROL" prefix="V_CTL_">
    <define name="POWER_CTL_BAT_NOMINAL" value="3.7" unit="volt"/>
    <!-- outer loop proportional gain -->
    <define name="ALTITUDE_PGAIN" value="0.05"/>
    <!-- outer loop saturation -->
    <define name="ALTITUDE_MAX_CLIMB" value="2."/>

    <!-- auto throttle inner loop -->
    <define name="AUTO_THROTTLE_NOMINAL_CRUISE_THROTTLE" value="0.8"/>
    <define name="AUTO_THROTTLE_MIN_CRUISE_THROTTLE" value="0.55"/>
    <define name="AUTO_THROTTLE_MAX_CRUISE_THROTTLE" value="0.99"/>
    <define name="AUTO_THROTTLE_LOITER_TRIM" value="1500"/>
    <define name="AUTO_THROTTLE_DASH_TRIM" value="-4000"/>
    <define name="AUTO_THROTTLE_CLIMB_THROTTLE_INCREMENT" value="0.15" unit="%/(m/s)"/>
    <define name="AUTO_THROTTLE_PGAIN" value="0.01"/>
    <define name="AUTO_THROTTLE_IGAIN" value="0.1"/>
    <define name="AUTO_THROTTLE_PITCH_OF_VZ_PGAIN" value="0.05"/>

    <define name="THROTTLE_SLEW_LIMITER" value="0.1" unit="s"/>

    <!--<define name="PITCH_LOITER_TRIM" value="RadOfDeg(50.)"/>
    <define name="PITCH_DASH_TRIM" value="RadOfDeg(-0.)"/>-->
  </section>



  <section name="HORIZONTAL CONTROL" prefix="H_CTL_">
    <define name="COURSE_PGAIN" value="0.771"/>
    <define name="COURSE_DGAIN" value="0.05"/>

    <define name="ROLL_MAX_SETPOINT" value="70" unit="deg"/>
    <define name="PITCH_MAX_SETPOINT" value="80" unit="deg"/>
    <define name="PITCH_MIN_SETPOINT" value="-80" unit="deg"/>

    <define name="PITCH_PGAIN" value="12000."/>	<!--  -->
    <define name="PITCH_DGAIN" value="1.5"/>

    <define name="ELEVATOR_OF_ROLL" value="800"/>

    <define name="ROLL_SLEW" value="1000"/>

    <define name="ROLL_ATTITUDE_GAIN" value="8500"/> <!--  -->
    <define name="ROLL_RATE_GAIN" value="1500"/>	<!-- 1500 -->
  </section>



  <section name="FAILSAFE" prefix="FAILSAFE_">
    <define name="DELAY_WITHOUT_GPS" value="5" unit="s"/>
    <define name="DEFAULT_THROTTLE" value="0"/>
    <define name="DEFAULT_ROLL" value="0"/>
    <define name="DEFAULT_PITCH" value="0"/>
  </section>



  <section name="AUTO1" prefix="AUTO1_">
    <define name="MAX_ROLL" value="90." unit="deg"/>
    <define name="MAX_PITCH" value="40." unit="deg"/>
  </section>



  <section name="BAT">
    <define name="MILLIAMP_AT_FULL_THROTTLE" value="1000"/>
    <define name="CATASTROPHIC_BAT_LEVEL" value="2.9" unit="V"/>
    <define name="CRITIC_BAT_LEVEL" value="3.0" unit="V"/>
    <define name="LOW_BAT_LEVEL" value="3.2" unit="V"/>
    <define name="MAX_BAT_LEVEL" value="4.1" unit="V"/>
    <!--<define name="VoltageOfAdc(adc)" value ="8"/>-->
  </section>



  <section name="MISC">
    <define name="NOMINAL_AIRSPEED" value="6." unit="m/s"/>
	  <define name="MIN_AIRSPEED" value="2." unit="m/s"/>
	  <define name="MAX_AIRSPEED" value="15." unit="m/s"/>
    <define name="CARROT" value="2." unit="s"/>
    <define name="KILL_MODE_DISTANCE" value="(1.5*MAX_DIST_FROM_HOME)"/>
    <define name="CONTROL_FREQUENCY" value="120" unit="Hz"/>
    <define name="DEFAULT_CIRCLE_RADIUS" value="10."/>

    <define name="UNLOCKED_HOME_MODE" value="TRUE"/>
    <define name="RC_LOST_MODE" value="PPRZ_MODE_MANUAL"/>
  </section>

</airframe>
